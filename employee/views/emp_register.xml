<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="employee_info_tree" model="ir.ui.view">
        <field name="name">employee.employee_info.tree</field>
        <field name="model">employee.employee_info</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="last"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="city"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- form View -->
    <record id="view_employee_info_form" model="ir.ui.view">
        <field name="name">employee.employee_info.form</field>
        <field name="model">employee.employee_info</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="last"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="city"/>
                            <field name="state"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="employee_info_action" model="ir.actions.act_window">
        <field name="name">Employee Info</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.employee_info</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first Employee Info...!!!!
            </p>
        </field>
    </record>


    <menuitem id="employee_root"
              name="Company"
              sequence="10"/>

    <menuitem id="employee_info_root"
              name="Employee"
              parent="employee_root"
              action="employee_info_action"
              sequence="2"/>

</odoo>